<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head %>
  </head>

  <body class="container">
    <header>
      <% include partials/header %>
    </header>

    <main>
      <div>
        <div class="recipe">
          <div class="title"><%=recipe.name %></div>
          <div
            class="row mb-4 wow fadeIn"
            style="visibility: visible; animation-name: fadeIn;"
          >
            <div class="col-sm-6">
              <img
                class="imgrecipe"
                src="<%= recipe.img %>"
                class="img-fluid"
                alt=""
              />
            </div>
            <div class="col-sm-6">
              <div class="title">
                Ingredients:
              </div>
              <div>
                <ul>
                  <% recipe.ingredients.forEach(ing => { %>
                  <li><%= ing %></li>
                  <% }) %>
                </ul>
              </div>
              <div><a href="<%= recipe.url %>">Read More</a></div>
            </div>
          </div>
          <% include comment %>
          <p class="line"></p>
        </div>
      </div>
    </main>
    <footer>
      <% include partials/footer %>
    </footer>
  </body>
</html>
