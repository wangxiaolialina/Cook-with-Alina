<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head %>
</head>

<body class="container">

    <header>
        <% include partials/header %>
    </header>

    <main>
        <div>
            <div class="recipe">
                <div class="title"><%=recipe.name %></div>
                <img class="imgrecipe" src="<%= recipe.img %>" />
                <div class="title">
                    Ingredients:
                </div>
                <div>
                    <ul>
                        <% recipe.ingredients.forEach(ing => { %>
                        <li><%= ing %></li>
                        <% }) %>
                    </ul>
                </div>
                <div> <a href="<%= recipe.url %>">Read More</a></div>
                <form action='/comment' method='post'>
                    <label for="comment">Comment:</label>
                    <input name="user_comment" type='text'></input>
                    <input name="recipe_uri" type="hidden" value=<%= recipe.uri %> />
                    <input name="search_name" type="hidden" value="<%= recipe.name %>" />
                    <input type="submit" value="Submit">
                </form>
                <div>Comments</div>
                <% if(commentText.length == 0){ %>
                <div>There is no comments</div>
                <% } else {%>
                <% commentText.forEach(comment=> { %>
                <div> <%= comment.text %> <a href='/comment/edit'><button>Edit</button></a></div>
                <%  }) %>
                <% } %>
                <p class='line'></p>
            </div>
        </div>
    </main>
    <footer>
        <% include partials/footer %>
    </footer>

</body>

</html>